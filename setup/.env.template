# --- Docker Image Configuration ---
IMAGE_NAME=sokrates1989/server-info-watchdog
IMAGE_VERSION=latest

# --- Server Identification ---
SERVER_NAME=local-dev

# --- Telegram Configuration ---
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=change_me_telegram_token
# Or use Docker secret file path (for Swarm)
TELEGRAM_BOT_TOKEN_FILE=

# --- Chat IDs ---
# Comma-separated list of Telegram chat IDs for each alert level
# Use negative numbers for group chats
ERROR_CHAT_IDS=-123456789
WARNING_CHAT_IDS=-123456789
INFO_CHAT_IDS=-123456789

# --- Gluster Handling ---
# How to handle servers without GlusterFS: "error", "warning", or "none"
GLUSTER_NOT_INSTALLED_HANDLING=warning

# --- Message Frequency (JSON) ---
# Controls how often messages of each type are sent
# Format: {"info": "1h", "warning": "1d", "error": "3d"}
# Supported units: s (seconds), m (minutes), h (hours), d (days)
WATCHDOG_MESSAGE_FREQUENCY_JSON={"info": "1h", "warning": "1d", "error": "3d"}

# --- Thresholds (JSON) ---
# All threshold values for monitoring. Each metric has warning and error levels.
# See watchdog.env.template for full documentation of each threshold.
WATCHDOG_THRESHOLDS_JSON={"timestampAgeMinutes": {"warning": "65", "error": "185"}, "cpu": {"warning": "80", "error": "100"}, "disk": {"warning": "75", "error": "90"}, "memory": {"warning": "75", "error": "90"}, "network_up": {"warning": "0", "error": "0"}, "network_down": {"warning": "0", "error": "0"}, "network_total": {"warning": "50000000", "error": "100000000"}, "processes": {"warning": "150", "error": "270"}, "users": {"warning": "2", "error": "3"}, "updates": {"warning": "10", "error": "25"}, "system_restart": {"warning": "10d", "error": "50d"}, "linux_server_state_tool": {"warning": "1", "error": "5"}, "gluster_unhealthy_peers": {"warning": "1", "error": "2"}, "gluster_unhealthy_volumes": {"warning": "1", "error": "2"}}

# --- Admin Web UI ---
# Token for authenticating with the watchdog web UI (leave empty to disable)
WATCHDOG_ADMIN_TOKEN=
